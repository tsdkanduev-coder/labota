{
  "id": "nabu-calendar",
  "uiHints": {
    "enabled": {
      "label": "Enable Nabu Calendar",
      "help": "Enable the Nabu calendar assistant"
    },
    "timezone": {
      "label": "Timezone",
      "help": "Your timezone (e.g., Europe/Moscow)",
      "placeholder": "Europe/Moscow"
    },
    "morningBriefHour": {
      "label": "Morning brief hour",
      "help": "Hour to send morning brief (0-23)",
      "placeholder": "8"
    },
    "eveningLookaheadHour": {
      "label": "Evening lookahead hour",
      "help": "Hour to send evening preview (0-23)",
      "placeholder": "20"
    },
    "writeEnabled": {
      "label": "Write access",
      "help": "Allow Nabu to create/move/cancel events (experimental)",
      "advanced": true
    }
  },
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": { "type": "boolean" },
      "timezone": { "type": "string" },
      "morningBriefHour": { "type": "number" },
      "eveningLookaheadHour": { "type": "number" },
      "writeEnabled": { "type": "boolean" },
      "syncIntervalMs": { "type": "number" },
      "maxProactivePerDay": { "type": "number" }
    }
  }
}
